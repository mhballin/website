---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { projects } from "../../data/projects";
import { Image } from "astro:assets";

export function getStaticPaths() {
  return projects.map((project) => ({
    params: { projectId: project.id },
    props: { project },
  }));
}

interface Props {
  project: (typeof projects)[0];
}

const { project } = Astro.props;
---

<BaseLayout title={project.title} sideBarActiveItemID="work">
  <!-- Back navigation -->
  <div class="mb-8">
    <a href="/work" class="text-primary hover:underline inline-flex items-center gap-2">
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
      </svg>
      Back to Projects
    </a>
  </div>

  <!-- Title & Metadata -->
  <div class="max-w-3xl mx-auto mb-16">
    <h1 class="text-5xl font-bold mb-6 leading-tight">{project.title}</h1>
    
    <div class="flex flex-wrap gap-4 mb-8 text-sm text-gray-600">
      {project.year && <div><span class="font-semibold">Year:</span> {project.year}</div>}
      {project.role && <div><span class="font-semibold">Role:</span> {project.role}</div>}
    </div>

    <p class="text-xl leading-relaxed text-gray-700">
      {project.overview || project.description}
    </p>
  </div>

  <!-- Hero Image -->
  <div class="w-full -mx-6 lg:-mx-12 mb-16">
    <div class="w-full aspect-[21/9] overflow-hidden bg-gray-100 rounded-xl">
      <Image
        src={project.heroImage}
        width={1600}
        height={686}
        format="webp"
        alt={project.title}
        class="w-full h-full object-cover"
      />
    </div>
  </div>

  <!-- Challenge Section -->
  {project.challenge && (
    <div class="max-w-3xl mx-auto mb-16">
      <h2 class="text-3xl font-bold mb-4">The Challenge</h2>
      <p class="text-lg leading-relaxed text-gray-700">{project.challenge}</p>
    </div>
  )}

  <!-- First Detail Image (if available) -->
  {project.images[1] && (
    <div class="w-full mb-16">
      <div class="max-w-4xl mx-auto">
        <Image
          src={project.images[1]}
          width={1200}
          height={800}
          format="webp"
          alt={`${project.title} detail`}
          class="w-full rounded-lg shadow-lg"
        />
      </div>
    </div>
  )}

  <!-- Solution Section -->
  {project.solution && (
    <div class="max-w-3xl mx-auto mb-16">
      <h2 class="text-3xl font-bold mb-4">The Solution</h2>
      <p class="text-lg leading-relaxed text-gray-700">{project.solution}</p>
    </div>
  )}

  <!-- Second Detail Image (if available) -->
  {project.images[2] && (
    <div class="w-full mb-16">
      <div class="max-w-4xl mx-auto">
        <Image
          src={project.images[2]}
          width={1200}
          height={800}
          format="webp"
          alt={`${project.title} detail`}
          class="w-full rounded-lg shadow-lg"
        />
      </div>
    </div>
  )}

  <!-- Additional Images (if more than 3) -->
  {project.images.length > 3 && (
    <div class="max-w-4xl mx-auto mb-16">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        {project.images.slice(3).map((image, index) => (
          <div class="w-full">
            <Image
              src={image}
              width={800}
              height={600}
              format="webp"
              alt={`${project.title} detail ${index + 4}`}
              class="w-full rounded-lg shadow-md"
            />
          </div>
        ))}
      </div>
    </div>
  )}

  <!-- Results Section -->
  {project.results && project.results.length > 0 && (
    <div class="max-w-3xl mx-auto mb-16">
      <div class="bg-base-200 rounded-2xl p-8">
        <h2 class="text-3xl font-bold mb-6">Results & Impact</h2>
        <ul class="space-y-3">
          {project.results.map((result) => (
            <li class="flex items-start gap-3">
              <svg class="w-6 h-6 text-primary flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              <span class="text-lg text-gray-700">{result}</span>
            </li>
          ))}
        </ul>
      </div>
    </div>
  )}

  <!-- Navigation to other projects -->
  <div class="max-w-3xl mx-auto mt-20 pt-8 border-t border-gray-200">
    <a href="/work" class="btn btn-outline">
      ‚Üê View All Projects
    </a>
  </div>
</BaseLayout>
