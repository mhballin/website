---
import BaseLayout from "../layouts/BaseLayout.astro";
import { projects } from "../data/projects";

const categories = ["blueprint", "making", "creative"];
const categoryProjects = categories.map(cat => 
  projects.find(p => p.category === cat)
);
---

<BaseLayout title="Projects & Work" sideBarActiveItemID="work">
  <div class="pb-12">
    <div class="text-3xl w-full font-bold">Projects & Work</div>
    <p class="text-lg text-gray-600 mt-4">
      Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris.
    </p>
  </div>

  <!-- Category Tiles with Hero Images -->
  <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-16">
    {categoryProjects.map((project, idx) => {
      const categoryNames = ["Blueprint", "Making", "Creative"];
      return (
        <a href={`/work/${project?.category}`} class="group">
          <div class="relative h-64 bg-base-200 rounded-lg overflow-hidden hover:shadow-lg transition-all duration-300">
            {project && (
              <>
                <img 
                  src={project.heroImage} 
                  alt={project.category}
                  class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                />
                <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-black/20 to-transparent"></div>
              </>
            )}
            <div class="absolute inset-0 flex items-end p-6">
              <h3 class="text-3xl font-bold text-white">{categoryNames[idx]}</h3>
            </div>
          </div>
        </a>
      );
    })}
  </div>
</BaseLayout>
